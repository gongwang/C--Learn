TOP := ..

COMM_DIR := $(TOP)/include $(TOP)/../../10-common/include/mcredis \
             $(TOP)/../../10-common/include/cbb

SRC_DIR := $(TOP)/src

## Name and type of the target for this Makefile

SO_TARGET := mcredis

## Define debugging symbols
DEBUG = 0
LINUX_COMPILER=_LINUX_ # _EQUATOR_, _HHPPC_, _LINUX_ and so on

CFLAGS += -D_LINUX_
CFLAGS += -fno-omit-frame-pointer
CFLAGS += -Wformat
CFLAGS += -DUSE_DBLOG

PWLIB_SUPPORT = 0

## Object files that compose the target(s)

CPP_FILES = $(wildcard $(SRC_DIR)/*.cpp)

OBJS := $(CPP_FILES:%.cpp=%) 


## Add driver-specific include directory to the search path

INC_PATH += $(COMM_DIR) 


## Libraries to include in shared object file
LIB_PATH =  $(libdir) 

LIBS := pthread uuid dl

# find .so in current directory
LDFLAGS += -Wl,-rpath=.

INSTALL_LIB_PATH := ../../../10-common/lib/release/linux32/mcredis
include ../../common.mk
